<?xml version="1.0" encoding="UTF-8"?>
<!-- 使用前，请好好查看配置文件说明及使用说明-->
<configure>
	<global>
		<!--生成代码路径 ,默认项目所在目录-->
		<property name="baseDir" value="f:\\code" />
		<!--基础包名，默认mapleLeaf.code-->
		<property name="basePackage" value="com.test" />
		<!-- 是否去表名前缀 ,默认false-->
		<property name="deleteTabPrefix" value="true" />
		<!-- 全局表名前缀，多个逗号分隔 ,默认""-->
		<property name="baseTabPrefix" value="sys_,wxcms_" />
		<!-- 表字段是否下划线转驼峰命名 ，默认false-->
		<property name="columnCamel" value="false" />
	
		<property name="persistance" value="hibernate" />
		
	</global>
	
	<db>
		<property name="dbType" value="mysql"/>
		<property name="dbName" value="wxmp"/>
		<property name="user" value="root"/>
		<property name="pwd" value="q123"/>
		<property name="driver" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://localhost:3306/wxmp?useUnicode=true&amp;characterEncoding=UTF-8"/>
	</db>
	
	<module>
		<entityPackage>entity</entityPackage>
		<daoPackage>dao</daoPackage>
		<servicePackage>service</servicePackage>
		<controllerPackage>controller</controllerPackage>
		<!-- hibernate不需要，可以设置空 -->
		<mapperPackage></mapperPackage>
		<viewPackage tpl="Jsp_list" suffix="html">jsp</viewPackage>
		<!-- 自定义配置，模板自定，比如js文件等等 -->
		<customPackage tpl="Jsp_add" suffix="java">custom</customPackage>
		
		<!-- 下面两表 双向关联 -->
		<table name="sys_user" prefix="sys_">
			<ref name="wxcms_login_info" type="OneToMany">id=user_id</ref>
		</table>
		<!-- 排除生成view及自定义 -->
		<table name="wxcms_login_info" prefix="wxcms_" exclude="view,custom" >
			<ref name="sys_user" type="ManyToOne">user_id=id</ref>	
		</table>
	</module>
	<module>
		<name>test2</name>
		<entityPackage>entity.test2</entityPackage>
		<daoPackage>dao.test2</daoPackage>
		<servicePackage>service.test2</servicePackage>
		<controllerPackage>controller.test2</controllerPackage>
		<!-- 包名配置空字符,该模块中的全部表就不会去生成对应的代码文件 -->
		<viewPackage></viewPackage>
		<customPackage></customPackage>
		<table name="wxcms_article" prefix="wxcms_"/>
	</module>
</configure>