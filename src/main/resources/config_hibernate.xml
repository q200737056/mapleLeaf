<?xml version="1.0" encoding="UTF-8"?>
<!-- 使用前，请好好查看配置文件说明及使用说明-->
<configure>
	<global>
		<!--生成代码路径 ,默认项目所在目录-->
		<property name="baseDir" value="f:\\code" />
		<!--基础包名，默认mapleLeaf.code-->
		<property name="basePackage" value="com.test" />
		<!-- 是否去表名前缀 ,默认false-->
		<property name="deleteTabPrefix" value="true" />
		<!-- 全局表名前缀，多个逗号分隔 ,默认""-->
		<property name="baseTabPrefix" value="sys_,wxcms_" />
		<!-- 表字段是否下划线转驼峰命名 ，默认false-->
		<property name="columnCamel" value="false" />
	
		<property name="persistence" value="hibernate" />
		
	</global>
	
	<db>
		<!-- 数据库类型(mysql,oracle,sqlserver,postgresql,informix) -->
		<dbType>mysql</dbType>
		<!-- 数据库名 -->
		<dbName>wxmp</dbName>
		<user>root</user>
		<pwd>q123</pwd>
		<driver>com.mysql.jdbc.Driver</driver>
		<url><![CDATA[jdbc:mysql://localhost:3306/wxmp?useUnicode=true&characterEncoding=UTF-8]]></url>
	</db>
	
	<module name="test1">
		<!-- 包名配置，如果为空或没配置，则该包对应类不会生成代码 -->
		<package>
			<property name="entityPkg" value="entity.test1"/>
			<property name="daoPkg" value="dao.test1"/>
			<property name="servicePkg" value="service.test1"/>
			<property name="controllerPkg" value="controller.test1"/>
		</package>
		
		<customArea>
			<!-- 自定义生成，可以配置多个标签，不限于java语言，属性customPkg包名，属性suffix 文件后缀;标签内容 模板，多个逗号分隔-->
			<codeFile customPkg="page" suffix="jsp">Jsp_list,Jsp_add</codeFile>
		</customArea>
		
		<!-- 下面两表 双向关联 -->
		<table name="sys_user" prefix="sys_">
			<ref name="wxcms_login_info" type="OneToMany">id=user_id</ref>
		</table>
		<!-- 排除生成view及自定义 -->
		<table name="wxcms_login_info" prefix="wxcms_" exclude="view,custom" >
			<ref name="sys_user" type="ManyToOne">user_id=id</ref>	
		</table>
	</module>
	<module name="test2">
		<!-- 包名配置，如果为空或没配置，则该包对应类不会生成代码 -->
		<package>
			<property name="entityPkg" value="entity.test2"/>
			<property name="daoPkg" value="dao.test2"/>
			<property name="servicePkg" value="service.test2"/>
			<property name="controllerPkg" value="controller.test2"/>
			<property name="mapperPkg" value="mapper"/>
		</package>
		
		<table tabName="wxcms_article" prefix="wxcms_"/>
	</module>
</configure>